@model MVCForum.Website.Areas.Admin.ViewModels.HighestViewedTopics

<div class="panel">
    <div class="panel-heading">
        <h5>观看次数最多的主题</h5>
    </div>
    @if (Model.Topics.Any())
    {
        <ul class="list-group">
            @foreach (var topic in Model.Topics)
            {
                <li class="list-group-item">
                    <span class="badge">@topic.Views</span>
                    <a href="@topic.NiceUrl">@Html.Raw(topic.Name)</a>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="panel-content">没有可显示的内容</div>
    }

</div>



